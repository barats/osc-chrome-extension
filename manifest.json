{
    "name": "开源中国",
    "version": "1.5",
    "description": "开源中国(oschina.net) Chrome 浏览器插件",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "开源中国"
    },
    "icons": {
        "16": "oschina_icon16.png",
        "32": "oschina_icon32.png",
        "48": "oschina_icon48.png",
        "128": "oschina_icon128.png"
    },
    "permissions": [
        "tabs",
        "webNavigation",
        "https://*.oschina.net/*"
    ],
    "manifest_version": 2
}